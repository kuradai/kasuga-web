- sub_title = "年間活動スケジュール"
- content_addr = "schedule"
!!!
%html
  %head
    %title #{sub_title} | #{Haml::Engine.new(File.read('./src/haml/template/title.haml')).render}
    = Haml::Engine.new(File.read("./src/haml/template/head.haml")).render

  %body
    = Haml::Engine.new(File.read("./src/haml/template/header.haml")).render
    #main
      .container
        = Haml::Engine.new(File.read("./src/haml/template/nav.haml")).render
        = Haml::Engine.new(File.read("./src/haml/content/#{content_addr}.haml")).render
      
    = Haml::Engine.new(File.read("./src/haml/template/foot.haml")).render